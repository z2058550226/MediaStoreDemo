<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="butterTest"
            android:text="Bucket List" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="accessAppSpecificFile"
            android:text="Access App-specific File" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mediaStore"
            android:text="Media Store File" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="storageAccessFramework"
            android:text="Use SAF to access file" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="imageDisplay"
            android:text="Image Display Test"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>